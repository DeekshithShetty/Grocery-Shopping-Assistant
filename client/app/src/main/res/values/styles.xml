<resources>

    <!-- Base application theme. -->
    <style name="MyAppTheme" parent="MyAppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyAppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="MyAppTheme.NoActionBar">
        <item name="android:textColorHint">#006140</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorSecondary">@color/primaryColorDark</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#EEE</item>
        <item name="colorControlHighlight">#888</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


</resources>
